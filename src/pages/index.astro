---
import "@/styles/global.css";

// User and session are populated by middleware in Astro.locals
const user = Astro.locals.user;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body
    class="flex min-h-screen items-center justify-center bg-linear-to-br from-blue-50 to-indigo-100"
  >
    <div class="space-y-8 p-8 text-center">
      <div class="space-y-4">
        <h1 class="text-5xl font-bold text-gray-900">Welcome to My App</h1>
        <p class="text-xl text-gray-600">
          Your RATS stack application is ready
        </p>
      </div>

      <div class="space-y-4">
        {
          user ? (
            <div class="space-y-2">
              <p class="text-gray-700">
                Welcome back, <strong>{user.name}</strong>!
              </p>
              <a
                href="/app"
                class="inline-flex items-center justify-center rounded-md bg-blue-600 px-8 py-3 text-lg font-medium text-white transition-colors hover:bg-blue-700"
              >
                Open App
              </a>
            </div>
          ) : (
            <a
              href="/app"
              class="inline-flex items-center justify-center rounded-md bg-blue-600 px-8 py-3 text-lg font-medium text-white transition-colors hover:bg-blue-700"
            >
              Get Started
            </a>
          )
        }
      </div>

      <p class="mt-8 text-sm text-gray-500">
        React + Astro + Tailwind + SQLite
      </p>
      <p class="mt-8 text-xs text-gray-500">
        Drizzle ORM + Better Auth + React Query + Shadcn/ui
      </p>
    </div>
  </body>
</html>
